extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Trabalho sis. seguros

        form(method='POST' action='/encript')
          div.form-group
            label(for='texto') Texto para encriptar:
            input#name.form-control(type='text', placeholder='Texto' name='texto')
            input#name.form-control(type='text', placeholder='Chave' name='chave')
          button.btn.btn-primary(type='submit') Encripty

        br
        br

        form(method='POST' action='/decripty')
          div.form-group
            label(for='texto') Texto para descriptar:
            input#name.form-control(type='text', placeholder='Texto' name='texto')
            input#name.form-control(type='text', placeholder='Chave' name='chave')
          button.btn.btn-primary(type='submit') Decripty

          h5="Resultado"
          p= result